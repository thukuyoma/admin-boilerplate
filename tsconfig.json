{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_documents.js",
    "pages/create-post.js",
    "database/config.js",
    "database/mongodb.js",
    "database/mongodb.js",
    "database/mongodb.js",
    "components/editor/CkEditor.js",
    "pages/accounts/register.tsx"
  ],
  "exclude": ["node_modules"]
}
